<?xml version="1.0" encoding="UTF-8"?>
<profiles version="12">
  <profile kind="CodeFormatterProfile" name="RuneLite" version="12">

    <!-- ==================== Indentation ==================== -->
    <setting id="org.eclipse.jdt.core.formatter.tabulation.char" value="tab"/>
    <setting id="org.eclipse.jdt.core.formatter.tabulation.size" value="4"/>
    <setting id="org.eclipse.jdt.core.formatter.indentation.size" value="4"/>
    <setting id="org.eclipse.jdt.core.formatter.continuation_indentation" value="1"/>
    <setting id="org.eclipse.jdt.core.formatter.lineSplit" value="120"/>

    <!-- ==================== Braces ==================== -->

    <!-- Control flow: same line -->
    <setting id="org.eclipse.jdt.core.formatter.brace_position_for_if" value="end_of_line"/>
    <setting id="org.eclipse.jdt.core.formatter.brace_position_for_for" value="end_of_line"/>
    <setting id="org.eclipse.jdt.core.formatter.brace_position_for_while" value="end_of_line"/>
    <setting id="org.eclipse.jdt.core.formatter.brace_position_for_do" value="end_of_line"/>
    <setting id="org.eclipse.jdt.core.formatter.brace_position_for_try" value="end_of_line"/>

    <!-- else / catch / finally on new line -->
    <setting id="org.eclipse.jdt.core.formatter.brace_position_for_else" value="next_line"/>
    <setting id="org.eclipse.jdt.core.formatter.brace_position_for_catch" value="next_line"/>
    <setting id="org.eclipse.jdt.core.formatter.brace_position_for_finally" value="next_line"/>

    <!-- Types and methods: next line allowed -->
    <setting id="org.eclipse.jdt.core.formatter.brace_position_for_type_declaration" value="next_line"/>
    <setting id="org.eclipse.jdt.core.formatter.brace_position_for_method_declaration" value="next_line"/>
    <setting id="org.eclipse.jdt.core.formatter.brace_position_for_constructor_declaration" value="next_line"/>

    <!-- ==================== Whitespace ==================== -->
    <setting id="org.eclipse.jdt.core.formatter.insert_space_after_comma_in_arguments" value="true"/>
    <setting id="org.eclipse.jdt.core.formatter.insert_space_before_comma_in_arguments" value="false"/>
    <setting id="org.eclipse.jdt.core.formatter.insert_space_after_opening_paren_in_if" value="false"/>
    <setting id="org.eclipse.jdt.core.formatter.insert_space_before_closing_paren_in_if" value="false"/>

    <!-- ==================== Imports ==================== -->
    <setting id="org.eclipse.jdt.core.formatter.number_of_imports_for_wildcard" value="999"/>
    <setting id="org.eclipse.jdt.core.formatter.number_of_static_imports_for_wildcard" value="999"/>

    <!-- ==================== Misc ==================== -->
    <setting id="org.eclipse.jdt.core.formatter.keep_else_statement_on_same_line" value="false"/>
    <setting id="org.eclipse.jdt.core.formatter.keep_then_statement_on_same_line" value="false"/>

  </profile>
</profiles>
