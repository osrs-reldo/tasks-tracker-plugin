# EditorConfig for RuneLite plugin development
# https://editorconfig.org

root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = tab

[*.java]
indent_style = tab
indent_size = 4
tab_width = 4
continuation_indent_size = 4

[*.xml]
indent_style = tab
indent_size = 4
tab_width = 4

[*.gradle]
indent_style = tab
indent_size = 4
tab_width = 4

[*.properties]
indent_style = space
indent_size = 4

[*.json]
indent_style = space
indent_size = 2
